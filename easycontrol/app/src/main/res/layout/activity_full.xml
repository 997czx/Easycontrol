<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000"
  android:keepScreenOn="true"
  tools:context=".client.view.FullActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/texture_view_layout"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="horizontal" />

    <LinearLayout
      android:id="@+id/nav_bar"
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:layout_gravity="bottom"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingStart="40dp">

      <ImageView
        android:id="@+id/button_switch"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_weight="1"
        android:src="@drawable/menu"
        android:tint="#fff" />

      <ImageView
        android:id="@+id/button_home"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_weight="1"
        android:src="@drawable/home"
        android:tint="#fff" />

      <ImageView
        android:id="@+id/button_back"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_weight="1"
        android:src="@drawable/back"
        android:tint="#fff" />

      <ImageView
        android:id="@+id/button_more"
        android:layout_width="40dp"
        android:layout_height="26dp"
        android:src="@drawable/more"
        android:tint="#fff" />
    </LinearLayout>
  </LinearLayout>

  <ImageView
    android:id="@+id/line"
    android:layout_width="20dp"
    android:layout_height="50dp"
    android:layout_gravity="end|bottom"
    android:src="@drawable/full_bar"
    android:tint="@color/clientBar"
    android:visibility="gone" />

  <GridLayout
    android:id="@+id/bar_view"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/background_cron"
    android:backgroundTint="@color/cardBackground"
    android:columnCount="3"
    android:padding="8dp">

    <ImageView
      android:id="@+id/button_mini"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_columnWeight="1"
      android:src="@drawable/mini"
      android:tint="@color/onCardBackground" />

    <ImageView
      android:id="@+id/button_full_exit"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_columnWeight="1"
      android:src="@drawable/fullscreen_exit"
      android:tint="@color/onCardBackground" />

    <ImageView
      android:id="@+id/button_close"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_columnWeight="1"
      android:src="@drawable/close"
      android:tint="@color/buttonSecond" />

    <Space
      android:layout_height="8dp"
      android:layout_columnSpan="3" />

    <ImageView
      android:id="@+id/button_power"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_columnWeight="1"
      android:src="@drawable/power"
      android:tint="@color/onCardBackground" />

    <ImageView
      android:id="@+id/button_to_line"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_columnWeight="1"
      android:src="@drawable/to_line"
      android:tint="@color/onCardBackground" />

  </GridLayout>
</FrameLayout>