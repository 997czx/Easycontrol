<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000"
  android:keepScreenOn="true"
  tools:context=".client.view.FullActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/texture_view_layout"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="horizontal" />

    <LinearLayout
      android:id="@+id/nav_bar"
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:layout_gravity="bottom"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingStart="40dp"
      android:paddingEnd="40dp">

      <ImageView
        android:id="@+id/button_switch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp"
        android:src="@drawable/menu"
        android:tint="#fff" />

      <ImageView
        android:id="@+id/button_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp"
        android:src="@drawable/round"
        android:tint="#fff" />

      <ImageView
        android:id="@+id/button_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp"
        android:src="@drawable/caret"
        android:tint="#fff" />

    </LinearLayout>
  </LinearLayout>

  <ImageView
    android:id="@+id/button_more"
    android:layout_width="40dp"
    android:layout_height="32dp"
    android:layout_gravity="end|bottom"
    android:padding="4dp"
    android:src="@drawable/more"
    android:tint="#fff" />

  <LinearLayout
    android:id="@+id/bar_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="42dp"
    android:background="@drawable/background_cron"
    android:backgroundTint="@color/cardBackgroundTranslucent"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
      android:id="@+id/button_nav_bar"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_margin="1dp"
      android:src="@drawable/hide_nav"
      android:tint="@color/onCardBackground" />

    <ImageView
      android:id="@+id/button_power"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_margin="1dp"
      android:src="@drawable/power"
      android:tint="@color/onCardBackground" />

    <ImageView
      android:id="@+id/button_mini"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_margin="1dp"
      android:src="@drawable/mini"
      android:tint="@color/onCardBackground" />

    <ImageView
      android:id="@+id/button_full_exit"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_margin="1dp"
      android:src="@drawable/exit_fullscreen"
      android:tint="@color/onCardBackground" />

    <ImageView
      android:id="@+id/button_close"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_margin="1dp"
      android:src="@drawable/close"
      android:tint="@color/buttonSecond" />

  </LinearLayout>

</FrameLayout>