<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_cron"
    android:backgroundTint="@color/cardBackground"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:text="干什么◔ ‸◔？ "
        android:textColor="@color/onCardBackground"
        android:textSize="@dimen/largeFont" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set_device_defult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@drawable/background_cron"
            android:backgroundTint="@color/buttonBackground"
            android:gravity="center"
            android:padding="8dp"
            android:text="默认打开"
            android:textColor="@color/onButtonBackground"
            android:textSize="@dimen/middleFont" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Button
            android:id="@+id/set_device_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@drawable/background_cron"
            android:backgroundTint="@color/buttonBackground"
            android:gravity="center"
            android:padding="8dp"
            android:text="远程恢复"
            android:textColor="@color/onButtonBackground"
            android:textSize="@dimen/middleFont" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set_device_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@drawable/background_cron"
            android:backgroundTint="@color/buttonBackgroundSecond"
            android:gravity="center"
            android:padding="8dp"
            android:text="修改"
            android:textColor="@color/onButtonBackgroundSecond"
            android:textSize="@dimen/middleFont" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Button
            android:id="@+id/set_device_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@drawable/background_cron"
            android:backgroundTint="@color/buttonBackgroundSecond"
            android:gravity="center"
            android:padding="8dp"
            android:text="删除"
            android:textColor="@color/onButtonBackgroundSecond"
            android:textSize="@dimen/middleFont" />
    </LinearLayout>

</LinearLayout>