<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:background="@color/cardContainerBackground"
    android:elevation="6dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="10dp"
      android:src="@drawable/app_icon" />

    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="易控"
      android:textColor="@color/onCardContainerBackground"
      android:textSize="@dimen/largeFont"
      android:textStyle="bold" />

    <Space
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <ImageView
      android:id="@+id/master_add"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:layout_marginEnd="4dp"
      android:src="@drawable/add"
      android:tint="@color/onBackground" />

    <ImageView
      android:id="@+id/master_set"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginEnd="12dp"
      android:src="@drawable/more"
      android:tint="@color/onBackground" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/linked_device_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical"
    android:visibility="gone">

    <include
      android:id="@+id/linked_device"
      layout="@layout/item_devices_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_margin="14dp"
      android:background="@color/onBackgroundSecond" />
  </LinearLayout>

  <ListView
    android:id="@+id/master_devices_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:divider="#00000000"
    android:dividerHeight="12dp"
    tools:listitem="@layout/item_devices_item" />

  <LinearLayout
    android:id="@+id/ww"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" />

</LinearLayout>
