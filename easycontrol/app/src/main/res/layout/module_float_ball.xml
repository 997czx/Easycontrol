<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/float_ball_ball"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/float_ball"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/float_ball_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/floatBallNav"
            android:background="@drawable/background_cron"
            android:backgroundTint="@color/cardContainerBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="14dp"
            android:paddingTop="12dp"
            android:paddingEnd="14dp"
            android:paddingBottom="12dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />

            <ImageView
                android:id="@+id/float_ball_switch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:src="@drawable/icon_switch"
                android:tint="@color/onCardBackground"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />

            <ImageView
                android:id="@+id/float_ball_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:src="@drawable/icon_home"
                android:tint="@color/onCardBackground"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />

            <ImageView
                android:id="@+id/float_ball_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:src="@drawable/icon_back"
                android:tint="@color/onCardBackground"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_cron"
                android:backgroundTint="@color/cardContainerBackground"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingTop="12dp"
                android:paddingEnd="14dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/float_ball_exit_full"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="退出全屏"
                    android:textColor="@color/onCardContainerBackground"
                    android:textSize="@dimen/middleFont" />

                <TextView
                    android:id="@+id/float_ball_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="退出投屏"
                    android:textColor="@color/onCardContainerBackground"
                    android:textSize="@dimen/middleFont" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>