<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000"
  tools:context=".FullActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="35dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextureView
      android:id="@+id/texture_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="35dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/button_switch"
      android:layout_width="26dp"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:src="@drawable/menu"
      android:tint="#fff" />

    <ImageView
      android:id="@+id/button_home"
      android:layout_width="26dp"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:src="@drawable/home"
      android:tint="#fff" />

    <ImageView
      android:id="@+id/button_back"
      android:layout_width="26dp"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:src="@drawable/back"
      android:tint="#fff" />

    <ImageView
      android:id="@+id/button_more"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_marginBottom="10dp"
      android:src="@drawable/more"
      android:tint="#fff" />
  </LinearLayout>

  <GridLayout
    android:id="@+id/bar_view"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="40dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_cron"
    android:backgroundTint="@color/cardBackground"
    android:columnCount="3"
    android:padding="8dp">

    <ImageView
      android:id="@+id/button_mini"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_columnWeight="1"
      android:src="@drawable/mini"
      android:tint="@color/onCardBackground" />

    <ImageView
      android:id="@+id/button_full_exit"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_columnWeight="1"
      android:src="@drawable/fullscreen_exit"
      android:tint="@color/onCardBackground" />

    <ImageView
      android:id="@+id/button_close"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_columnWeight="1"
      android:src="@drawable/close"
      android:tint="@color/buttonSecond" />

  </GridLayout>
</FrameLayout>